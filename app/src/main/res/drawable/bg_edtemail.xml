    <!-- Màu nền -->
    <solid android:color="#1E222B"/>

    <!-- Bo góc -->
    <corners android:radius="10dp"/>

    <!-- Viền ngoài -->
    <stroke
        android:width="1dp"
        android:color="#1E222B"/>

    <!-- Khoảng cách trong -->
