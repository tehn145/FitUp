<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp">

    <!-- Avatar -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_comment_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/defaultavt"
        app:civ_border_width="0dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <!-- Username Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_comment_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Username"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="This is an amazing post!"
            android:textColor="#E0E0E0"
            android:textSize="14sp"
            android:layout_marginTop="2dp"/>

        <!-- Timestamp moved here -->
        <TextView
            android:id="@+id/tv_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2h ago"
            android:textColor="@color/gray"
            android:textSize="10sp"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/btn_comment_options"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_more"
        app:tint="@color/gray"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:padding="4dp" />
    <!-- Note: If you don't have ic_more_vert, you can use android:drawable/ic_menu_more or create a vector asset -->

</LinearLayout>
