<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/date_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_date_header"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp"
        android:text="Today"
        android:textColor="#B0B0B0"
        android:textSize="12sp"
        android:layout_marginVertical="8dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/text_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginEnd="8dp"
            android:text="10:00"
            android:textColor="#808080"
            android:textSize="10sp" />

        <!-- Session Card -->
        <LinearLayout
            android:id="@+id/layout_session_card"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_message_sent"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SESSION"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#DDDDDD"
                android:letterSpacing="0.1"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#55FFFFFF"
                android:layout_marginVertical="6dp"/>

            <TextView
                android:id="@+id/tv_session_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HIIT Workout"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tv_session_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500,000 VND â€¢ Oct 24"
                android:textColor="#DDDDDD"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_session_details_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6:00 AM - 9:00 AM"
                android:textColor="#DDDDDD"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/btn_view_session"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button_orange_gradient"
                android:text="View Location"
                android:gravity="center"
                android:paddingVertical="6dp"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/btn_finish_session"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button_orange_gradient"
                android:text="End Session"
                android:gravity="center"
                android:paddingVertical="6dp"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/btn_cancel_session"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray_medium"
                android:background="@drawable/bg_button_orange_gradient"
                android:text="Cancel Session"
                android:gravity="center"
                android:paddingVertical="6dp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="5dp"
                android:textSize="14sp"
                android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
