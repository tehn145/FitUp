<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dots"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">

        <!-- Top row: Back + Title (đẩy xuống 1 chút) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="35dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_back_24"
                android:contentDescription="Back"
                android:tint="#FFFFFF"
                android:padding="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Search with AI"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Hello friend row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="18dp">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/sparkle"
                android:contentDescription="sparkle"
                app:tint="#FFA000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello friend"
                android:layout_marginStart="10dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="34sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Let AI find the perfect coach for you. Just describe your needs and watch the magic happen!"
            android:textColor="#BDBDBD"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="2dp"
            android:textSize="14sp" />

        <!-- Search bar -->
        <LinearLayout
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_search"
            android:paddingStart="14dp"
            android:paddingEnd="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etQuery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Find a Trainer in District 1..."
                android:textColor="#FFFFFF"
                android:textColorHint="#7A7A7A"
                android:singleLine="true" />

            <ImageButton
                android:id="@+id/btnSearch"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_search"
                android:contentDescription="search"
                app:tint="#BDBDBD" />
        </LinearLayout>

        <!-- Chips -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chipGym"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:gravity="center"
                    android:text="Gym Trainers"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_chip" />

                <TextView
                    android:id="@+id/chipWeightLoss"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:gravity="center"
                    android:text="Weight Loss Experts"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_chip" />

                <TextView
                    android:id="@+id/chipUnknown"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:gravity="center"
                    android:text="Unknown"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_chip" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Banner 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="16dp"
            app:cardUseCompatPadding="false"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_banner_blue"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvBannerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The right personal trainer?"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/btnConnectNow"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:text="Connect now  →"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FF7A00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:text="22"
                    android:textStyle="bold"
                    android:textColor="#1E6FE8"
                    android:background="#FFFFFF"
                    android:padding="6dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Banner 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="14dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_banner_dark"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Looking for a workout buddy?"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:layout_centerVertical="true" />

                <Button
                    android:id="@+id/btnFindNow"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="Find now"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#1A1A1A" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Result list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMatches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
