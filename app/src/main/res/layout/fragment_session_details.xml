<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet_rounded_top"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Session Details"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- Session Name -->
        <TextView
            android:id="@+id/tvSessionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HIIT Workout"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvSessionStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:textColor="@color/orange"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/bg_chat_input"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:layout_marginBottom="20dp"/>

        <!-- Details Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_chat_input"
            android:padding="16dp">

            <!-- Date & Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="#B0B0B0"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:id="@+id/tvDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mon, Oct 24 â€¢ 08:00 AM - 09:00 AM"
                    android:textColor="#DDDDDD"
                    android:textSize="15sp"/>
            </LinearLayout>

            <!-- Location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_location"
                    app:tint="#B0B0B0"
                    android:layout_marginEnd="12dp"/>
                <!-- Note: Make sure you have ic_location or similar drawable -->

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City Gym / Online"
                    android:textColor="#DDDDDD"
                    android:textSize="15sp"/>
            </LinearLayout>

            <!-- Price -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_wallet"
                    app:tint="#B0B0B0"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50,000 VND"
                    android:textColor="#DDDDDD"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Note Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note:"
            android:textColor="#B0B0B0"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please bring your own mat."
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginBottom="32dp"/>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Finish / Complete Session Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFinishSession"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Finish Session"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:backgroundTint="@color/white"
                app:cornerRadius="12dp"
                android:layout_marginBottom="12dp"/>

            <!-- Cancel Session Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelSession"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Cancel Session"
                android:textColor="#FF5252"
                android:backgroundTint="#333333"
                app:strokeColor="#FF5252"
                app:strokeWidth="1dp"
                app:cornerRadius="12dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
