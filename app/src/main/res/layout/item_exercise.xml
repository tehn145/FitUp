<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="#1A1A1A"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivExerciseImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_dumbbell"
            android:scaleType="centerCrop"
            android:background="#2A2A2A"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvExerciseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Push Up"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvTargetMuscle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chest, Triceps"
                android:textColor="@color/gray_light"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvDifficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beginner"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:background="@drawable/bg_badge_beginner"/>

                <TextView
                    android:id="@+id/tvEquipment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bodyweight"
                    android:textColor="@color/gray_light"
                    android:textSize="11sp"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvDefaultSetsReps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 sets Ã— 12 reps"
                android:textColor="@color/orange"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>