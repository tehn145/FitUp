<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet_rounded_top"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingHorizontal="24dp"
    android:paddingVertical="32dp">

    <TextView
        android:id="@+id/tv_options_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Post Options"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOptionReport"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Report Post"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        app:icon="@drawable/ic_report"
        app:iconTint="@color/white"
        app:iconGravity="textStart"
        app:iconPadding="16dp"
        app:iconSize="24dp"
        app:cornerRadius="12dp"
        app:strokeColor="@color/gray" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOptionDelete"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:text="Delete Post"
        android:textColor="#FF5252"
        android:textSize="16sp"
        android:gravity="center"
        app:icon="@drawable/ic_trashcan"
        app:iconTint="#FF5252"
        app:iconGravity="textStart"
        app:iconPadding="16dp"
        app:iconSize="24dp"
        app:cornerRadius="12dp"
        app:strokeColor="#FF5252"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancelOptions"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@color/gray"
        android:textSize="16sp" />

</LinearLayout>
