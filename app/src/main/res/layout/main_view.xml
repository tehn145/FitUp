<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_outer_ring"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:backgroundTint="@color/orange"
        app:elevation="0dp"
        app:shapeAppearanceOverlay="@style/CircleFab"
        app:layout_constraintTop_toTopOf="@+id/bottomNav"
        app:layout_constraintBottom_toBottomOf="@+id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="false"
        android:importantForAccessibility="no"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_black_ring"
        android:layout_width="58dp"
        android:layout_height="58dp"
        app:backgroundTint="@color/black"
        app:elevation="0dp"
        app:shapeAppearanceOverlay="@style/CircleFab"
        app:layout_constraintTop_toTopOf="@id/fab_outer_ring"
        app:layout_constraintBottom_toBottomOf="@id/fab_outer_ring"
        app:layout_constraintStart_toStartOf="@id/fab_outer_ring"
        app:layout_constraintEnd_toEndOf="@id/fab_outer_ring"
        android:clickable="false"
        android:importantForAccessibility="no"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_background"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:fabCustomSize="50dp"
        android:backgroundTint="@color/orange"
        app:elevation="0dp"
        app:tint="@color/white"
        android:src="@drawable/sparkle"
        app:shapeAppearanceOverlay="@style/CircleFab"
        app:layout_constraintTop_toTopOf="@id/fab_black_ring"
        app:layout_constraintBottom_toBottomOf="@id/fab_black_ring"
        app:layout_constraintStart_toStartOf="@id/fab_black_ring"
        app:layout_constraintEnd_toEndOf="@id/fab_black_ring"
        android:clickable="false"
        android:importantForAccessibility="no"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_match"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:fabCustomSize="64dp"
        android:backgroundTint="@android:color/transparent"
        app:elevation="0dp"
        app:shapeAppearanceOverlay="@style/CircleFab"
        app:layout_constraintTop_toTopOf="@id/fab_outer_ring"
        app:layout_constraintBottom_toBottomOf="@id/fab_outer_ring"
        app:layout_constraintStart_toStartOf="@id/fab_outer_ring"
        app:layout_constraintEnd_toEndOf="@id/fab_outer_ring"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="AI Match"
        app:rippleColor="@null" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemGravity="center"
        app:itemIconTint="@color/bottom_nav_color_selector"
        app:itemTextColor="@color/bottom_nav_color_selector"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:itemRippleColor="@null"
        app:itemActiveIndicatorStyle="@style/NoActiveIndicator"
        android:background="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>
