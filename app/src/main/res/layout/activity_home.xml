<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="vertical"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/black"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnUser"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/defaultavt"
                android:scaleType="centerCrop"
                android:background="@drawable/circle"
                android:clipToOutline="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingStart="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="User Name"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:maxWidth="160dp"/>

                    <LinearLayout
                        android:id="@+id/layoutStreak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_fire"
                            app:tint="#FF5722"/>
                        <TextView
                            android:id="@+id/tvStreakCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#FF5722"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_marginStart="2dp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="2dp">

                    <ImageView
                        android:id="@+id/icGem"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_fitupgem"
                        app:tint="@color/orange"
                        android:layout_marginEnd="4dp"
                        />
                    <TextView
                        android:id="@+id/tvUserGemCount"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="0 FitGem"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>
                </LinearLayout>

            </LinearLayout>

            <ImageButton
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_marginRight="15dp"
                android:id="@+id/btnSearch"
                android:src="@drawable/search"
                android:scaleType="centerInside"
                android:clickable="true"
                android:focusable="false"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/white"/>

            <ImageButton
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:scaleType="centerInside"
                android:id="@+id/btnAdd"
                android:src="@drawable/add"
                android:clickable="true"
                android:focusable="false"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/white"/>
        </LinearLayout>

        <TextView
            android:layout_height="5dp"
            android:layout_width="match_parent"
            android:background="@color/gray_dark"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#101010">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_invite"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="#E76F21"
                    app:cardElevation="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/img_gift"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/img_gift"
                            android:scaleType="fitCenter"
                            android:layout_marginLeft="35dp"
                            android:padding="5dp"
                            app:layout_constraintWidth_percent="0.4"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />

                        <TextView
                            android:id="@+id/tv_invite_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Invite Friend"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@+id/btn_reward"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.322"
                            app:layout_constraintStart_toEndOf="@+id/img_gift"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_chainStyle="packed" />

                        <TextView
                            android:id="@+id/btn_reward"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/bg_pill_dark"
                            android:paddingHorizontal="20dp"
                            android:paddingVertical="6dp"
                            android:text="+2 FitGem"
                            android:textColor="#FF8800"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/tv_invite_title"
                            app:layout_constraintStart_toStartOf="@+id/tv_invite_title"
                            app:layout_constraintTop_toBottomOf="@+id/tv_invite_title" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/banner_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="12dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_invite"
                    app:cardBackgroundColor="#222">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/bannerViewPager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/bannerTabLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="@android:color/transparent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:tabGravity="center"
                            app:tabIndicatorHeight="0dp"
                            app:tabRippleColor="@null" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/banner_view"
                    app:layout_constraintBottom_toTopOf="@id/top_trainer_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/top_trainer_view"
                    android:text="Top Trainers"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:layout_marginTop="16dp"
                    android:textStyle="bold"
                    />

                <TextView
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/banner_view"
                    app:layout_constraintBottom_toTopOf="@id/recyclerTopTrainers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/trainer_see_more"
                    android:text="See more"
                    android:clickable="true"
                    android:focusable="auto"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:visibility="visible"
                    android:layout_marginEnd="20dp"
                    />

                <ImageView
                    android:id="@+id/btn_see_more_arrow"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/back1"
                    app:tint="@android:color/white"
                    android:rotation="180"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/trainer_see_more"
                    app:layout_constraintBottom_toBottomOf="@+id/trainer_see_more" />

                <androidx.recyclerview.widget.RecyclerView
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/top_trainer_view"
                    android:id="@+id/recyclerTopTrainers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginTop="8dp"
                    />


                <LinearLayout
                    android:id="@+id/quick_discover_layout"
                    android:layout_marginTop="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black_translucent"
                    android:background="@drawable/bg_edtemail"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recyclerTopTrainers">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quick Discover"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:tint="@color/orange"
                                android:src="@drawable/location"
                                android:scaleType="centerInside"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Near you"
                                android:textStyle="bold"
                                android:layout_marginTop="2sp"
                                android:textColor="@android:color/white"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:tint="@color/orange"
                                android:src="@drawable/chatting"
                                android:scaleType="centerInside"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Messages"
                                android:textStyle="bold"
                                android:layout_marginTop="2sp"
                                android:textColor="@android:color/white"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:tint="@color/orange"
                                android:src="@drawable/compass"
                                android:scaleType="centerInside"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Connections"
                                android:textStyle="bold"
                                android:layout_marginTop="2sp"
                                android:textColor="@android:color/white"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:tint="@color/orange"
                                android:src="@drawable/trainer"
                                android:scaleType="centerInside"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Community"
                                android:textStyle="bold"
                                android:layout_marginTop="2sp"
                                android:textColor="@android:color/white"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_exercise_library"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackgroundBorderless">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:tint="@color/orange"
                                android:src="@drawable/ic_dumbbell"
                                android:scaleType="centerInside"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Exercises"
                                android:textStyle="bold"
                                android:layout_marginTop="2sp"
                                android:textColor="@android:color/white"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/text_today_challenge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/quick_discover_layout"
                    android:text="Today challenge"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:id="@+id/Today_challenge_box"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_today_challenge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:backgroundTint="@color/black_translucent"
                    android:background="@drawable/bg_edtemail"
                    android:padding="12dp"
                    android:layout_marginTop="16sp"
                    android:layout_marginBottom="80dp"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Daily Challenge"
                            android:layout_marginLeft="5dp"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/btnRedoQuiz"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Redo Check-in"
                            android:textColor="@color/orange"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackgroundBorderless"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:divider="@drawable/bg_rcorner"
                        android:showDividers="middle">

                        <TextView
                            android:id="@+id/tvChallenge1"
                            android:background="@drawable/bg_edtemail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="3 sets x 15 reps - Crunch"
                            android:textColor="@android:color/white"
                            android:paddingVertical="6dp"/>

                        <TextView
                            android:id="@+id/tvChallenge2"
                            android:layout_marginTop="5sp"
                            android:background="@drawable/bg_edtemail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="3 sets x 12 reps - Leg Raises"
                            android:textColor="@android:color/white"
                            android:paddingVertical="6dp"/>

                        <TextView
                            android:id="@+id/tvChallenge3"
                            android:layout_marginTop="5sp"
                            android:background="@drawable/bg_edtemail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="3 sets x 30 giÃ¢y - Plank"
                            android:textColor="@android:color/white"
                            android:paddingVertical="6dp"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_mascot_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_mascot_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@drawable/bg_speech_bubble"
            android:text="Hi! I'm Fitty. Need help?"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:elevation="6dp"
            android:maxWidth="200dp"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/btn_virtual_assistant"
            app:layout_constraintEnd_toEndOf="@+id/btn_virtual_assistant"
            android:fontFamily="sans-serif-medium"
            android:textColor="#2D3436"/>

        <ImageView
            android:id="@+id/btn_virtual_assistant"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:elevation="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_fitty_rmbg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>