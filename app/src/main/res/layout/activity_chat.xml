<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".ChatActivity">

    <!-- Header Section (Unchanged) -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:background="#000000"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/imgbtn_Back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back1"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/tvUserMess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="User Name"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Modified Input Section -->
    <RelativeLayout
        android:id="@+id/layout_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:padding="8dp">

        <!-- Send Button (Right side) -->
        <ImageButton
            android:id="@+id/send_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_sendmessage"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/white"
            android:padding="10dp"
            android:scaleType="fitCenter"/>

        <!-- Container for Action Buttons (Left side) -->
        <LinearLayout
            android:id="@+id/action_buttons_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp">

            <ImageButton
                android:id="@+id/btn_send_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_image"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#B0B0B0"
                android:padding="8dp"
                android:scaleType="fitCenter"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/btn_book_session"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_report"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#B0B0B0"
                android:padding="10dp"
                android:scaleType="fitCenter"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <!-- Message Input Field -->
        <!-- Changed layout_toStartOf and layout_toEndOf to fit between buttons -->
        <EditText
            android:id="@+id/message_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/send_button"
            android:layout_toEndOf="@id/action_buttons_container"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/bg_chat_input"
            android:hint="Type a message..."
            android:textColorHint="#888888"
            android:textColor="@color/white"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp"
            android:maxLines="4"
            android:textSize="16sp" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@id/layout_input"
        android:paddingHorizontal="12dp"
        android:clipToPadding="false" />

</RelativeLayout>
