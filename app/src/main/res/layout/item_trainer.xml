<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical"
    android:backgroundTint="@color/black_soft"
    android:background="@drawable/bg_rcorner">

    <ImageView
        android:id="@+id/imgTrainer"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/trainer"
        android:tint="@color/white"
        android:scaleType="centerCrop"
        android:backgroundTint="@color/black_soft"
        android:padding="15px"
        android:background="@drawable/dot_selected"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp">
        <TextView android:id="@+id/txtTrainerName"
            android:text="Trainer Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ranked Trainer"
            android:textColor="#AAA"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtRank"
        android:text="Top 1"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_otp_box"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:layout_marginRight="15dp"
        android:textSize="12sp"/>
</LinearLayout>
