<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FitUp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.FitUp" parent="Base.Theme.FitUp" />

    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CircularImageViewForEditImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="CustomTabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="Widget.App.Button.Gender" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/gender_button_text_color</item>
        <item name="backgroundTint">@color/gender_button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">5dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <declare-styleable name="bg_overlay">
        <attr name="exampleString" format="string" />
        <attr name="exampleDimension" format="dimension" />
        <attr name="exampleColor" format="color" />
        <attr name="exampleDrawable" format="color|reference" />
    </declare-styleable>


    <style name="CustomNumberPickerTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="NumberPickerTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textSize">75sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>